@page
@model Fall2025_Project3_jppierre.Pages.ActorMovies.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete Actor-Movie Relationship</h1>

<h3>Are you sure you want to delete this relationship?</h3>
<div>
    <h4>Relationship Details</h4>
    <hr />
    <dl class="row">
   <dt class="col-sm-2">
     Actor Name
  </dt>
   <dd class="col-sm-10">
 @Html.DisplayFor(model => model.ActorMovie.Actor.Name)
   </dd>
  <dt class="col-sm-2">
   Movie Title
   </dt>
        <dd class="col-sm-10">
@Html.DisplayFor(model => model.ActorMovie.Movie.Title)
  </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="ActorMovie.Id" />
   <input type="submit" value="Delete Relationship" class="btn btn-danger" />
        <a asp-page="./Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
