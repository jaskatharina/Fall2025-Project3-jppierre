@model Fall2025_Project3_jppierre.Pages.ActorMovies.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create Actor-Movie Relationship</h1>

<h4>Link an Actor to a Movie</h4>
<hr />
<div class="row">
    <div class="col-md-4">
   <form method="post">
      <div asp-validation-summary="ModelOnly" class="text-danger"></div>
      <div class="form-group">
       <label asp-for="ActorMovie.ActorId" class="control-label">Actor</label>
     <select asp-for="ActorMovie.ActorId" class="form-control" asp-items="ViewBag.ActorId">
         <option value="">-- Select an Actor --</option>
     </select>
        <span asp-validation-for="ActorMovie.ActorId" class="text-danger"></span>
     </div>
<div class="form-group">
    <label asp-for="ActorMovie.MovieId" class="control-label">Movie</label>
  <select asp-for="ActorMovie.MovieId" class="form-control" asp-items="ViewBag.MovieId">
       <option value="">-- Select a Movie --</option>
      </select>
      <span asp-validation-for="ActorMovie.MovieId" class="text-danger"></span>
    </div>
       <div class="form-group">
      <input type="submit" value="Create Relationship" class="btn btn-primary" />
      </div>
      </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

