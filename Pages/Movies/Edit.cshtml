@page
@model Fall2025_Project3_jppierre.Pages.Movies.EditModel

@{
    ViewData["Title"] = "Edit Movie";
}

<h1>@ViewData["Title"]</h1>
<hr />
<div class="row">
  <div class="col-md-4">
   <form method="post" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
  <input type="hidden" asp-for="Movie.Id" />
 <div class="form-group">
    
          <label asp-for="Movie.Title" class="control-label"></label>
    <input asp-for="Movie.Title" class="form-control" />
    <span asp-validation-for="Movie.Title" class="text-danger"></span>
       </div>
     <div class="form-group">
         
  <label asp-for="Movie.IMDBLink" class="control-label"></label>
            <input asp-for="Movie.IMDBLink" class="form-control" />
   <span asp-validation-for="Movie.IMDBLink" class="text-danger"></span>
     </div>
       <div class="form-group">
        
       <label asp-for="Movie.Genre" class="control-label"></label>
    <input asp-for="Movie.Genre" class="form-control" />
     <span asp-validation-for="Movie.Genre" class="text-danger"></span>
   </div>
     <div class="form-group">
    
    <label asp-for="Movie.ReleaseYear" class="control-label"></label>
   <input asp-for="Movie.ReleaseYear" class="form-control" />
      <span asp-validation-for="Movie.ReleaseYear" class="text-danger"></span>
       </div>
   <div class="form-group">
      <label class="control-label">Current Poster</label>
     @if (Model.Movie.Poster != null && Model.Movie.Poster.Length > 0)
   {
    <div>
       <img src="data:image/jpeg;base64,@Convert.ToBase64String(Model.Movie.Poster)" 
     alt="Current Poster" 
       style="max-width: 200px; max-height: 300px;" />
     </div>
  }
  else
  {
       <p>No poster currently set</p>
     }
       </div>
 <div class="form-group">
   <label for="PosterFile" class="control-label">Upload New Poster</label>
      <input type="file" name="PosterFile" id="PosterFile" class="form-control" accept="image/*" />
        <small class="form-text text-muted">Leave empty to keep current poster</small>
  </div>
    <div class="form-group">
  <input type="submit" value="Save" class="btn btn-primary" />
        <a asp-page="./Index" class="btn btn-secondary">Cancel</a>
     </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
