@page
@model Fall2025_Project3_jppierre.Pages.Movies.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete Movie</h1>

<h3>Are you sure you want to delete this movie?</h3>
<div>
    <h4>Movie Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
   @Html.DisplayNameFor(model => model.Movie.Title)
  </dt>
        <dd class="col-sm-10">
     @Html.DisplayFor(model => model.Movie.Title)
 </dd>
        <dt class="col-sm-2">
   @Html.DisplayNameFor(model => model.Movie.IMDBLink)
  </dt>
  <dd class="col-sm-10">
    @Html.DisplayFor(model => model.Movie.IMDBLink)
        </dd>
  <dt class="col-sm-2">
 @Html.DisplayNameFor(model => model.Movie.Genre)
        </dt>
    <dd class="col-sm-10">
    @Html.DisplayFor(model => model.Movie.Genre)
 </dd>
        <dt class="col-sm-2">
    @Html.DisplayNameFor(model => model.Movie.ReleaseYear)
  </dt>
     <dd class="col-sm-10">
   @Html.DisplayFor(model => model.Movie.ReleaseYear)
 </dd>
<dt class="col-sm-2">
  Poster
  </dt>
 <dd class="col-sm-10">
    @if (Model.Movie.Poster != null && Model.Movie.Poster.Length > 0)
      {
     <img src="data:image/jpeg;base64,@Convert.ToBase64String(Model.Movie.Poster)" 
       alt="Poster" 
   style="max-width: 200px; max-height: 300px;" 
     class="img-thumbnail" />
   }
 else
  {
      <span class="text-muted">No poster</span>
  }
 </dd>
    </dl>
    
    <form method="post">
    <input type="hidden" asp-for="Movie.Id" />
        <input type="submit" value="Delete Movie" class="btn btn-danger" />
        <a asp-page="./Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
