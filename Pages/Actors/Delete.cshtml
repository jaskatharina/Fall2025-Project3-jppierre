@page
@model Fall2025_Project3_jppierre.Pages.Actors.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete Actor</h1>

<h3>Are you sure you want to delete this actor?</h3>
<div>
    <h4>Actor Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
   @Html.DisplayNameFor(model => model.Actor.Name)
  </dt>
        <dd class="col-sm-10">
 @Html.DisplayFor(model => model.Actor.Name)
        </dd>
  <dt class="col-sm-2">
    @Html.DisplayNameFor(model => model.Actor.Gender)
  </dt>
   <dd class="col-sm-10">
   @Html.DisplayFor(model => model.Actor.Gender)
        </dd>
        <dt class="col-sm-2">
 @Html.DisplayNameFor(model => model.Actor.Age)
  </dt>
        <dd class="col-sm-10">
   @Html.DisplayFor(model => model.Actor.Age)
   </dd>
<dt class="col-sm-2">
   @Html.DisplayNameFor(model => model.Actor.IMDBLink)
   </dt>
        <dd class="col-sm-10">
  @Html.DisplayFor(model => model.Actor.IMDBLink)
  </dd>
  <dt class="col-sm-2">
    Photo
     </dt>
   <dd class="col-sm-10">
      @if (Model.Actor.Photo != null && Model.Actor.Photo.Length > 0)
  {
   <img src="data:image/jpeg;base64,@Convert.ToBase64String(Model.Actor.Photo)" 
    alt="Photo" 
  style="max-width: 200px; max-height: 200px;" 
   class="img-thumbnail" />
  }
   else
 {
    <span class="text-muted">No photo</span>
  }
  </dd>
    </dl>
    
    <form method="post">
  <input type="hidden" asp-for="Actor.Id" />
   <input type="submit" value="Delete Actor" class="btn btn-danger" />
        <a asp-page="./Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
