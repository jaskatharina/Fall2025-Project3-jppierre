@page
@model Fall2025_Project3_jppierre.Pages.Actors.EditModel

@{
    ViewData["Title"] = "Edit Actor";
}

<h1>@ViewData["Title"]</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Actor.Id" />
            <div class="form-group">
                
                <label asp-for="Actor.Name" class="control-label"></label>
                <input asp-for="Actor.Name" class="form-control" />
                <span asp-validation-for="Actor.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                
                <label asp-for="Actor.Gender" class="control-label"></label>
                <input asp-for="Actor.Gender" class="form-control" />
                <span asp-validation-for="Actor.Gender" class="text-danger"></span>
            </div>
            <div class="form-group">
                
                <label asp-for="Actor.Age" class="control-label"></label>
                <input asp-for="Actor.Age" class="form-control" />
                <span asp-validation-for="Actor.Age" class="text-danger"></span>
            </div>
            <div class="form-group">
                
                <label asp-for="Actor.IMDBLink" class="control-label"></label>
                <input asp-for="Actor.IMDBLink" class="form-control" />
                <span asp-validation-for="Actor.IMDBLink" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Current Photo</label>
                @if (Model.Actor.Photo != null && Model.Actor.Photo.Length > 0)
                {
                    <div>
                        <img src="data:image/jpeg;base64,@Convert.ToBase64String(Model.Actor.Photo)" 
                        alt="Current Photo" 
                         style="max-width: 200px; max-height: 200px;" />
                    </div>
                }
                else
                {
                    <p>No photo currently set</p>
                }
            </div>
            <div class="form-group">
                <label for="PhotoFile" class="control-label">Upload New Photo</label>
                <input type="file" name="PhotoFile" id="PhotoFile" class="form-control" accept="image/*" />
                <small class="form-text text-muted">Leave empty to keep current photo</small>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-page="./Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
